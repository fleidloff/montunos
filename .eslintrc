{
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
  },
  "env": {
    "es6": true,
    "node": true,
    "browser": true
  },
  "rules": {
    // use double quotes
    "quotes": [
      2,
      "double"
    ],
    indent: ["error", 4, { "SwitchCase": 1 }],
    // exactly one variable declaration per type per function (var) or block (let or const)
    "one-var": [
      2,
      "never"
    ],
    // only use let and const for variables, not var
    "no-var": 2,
    // limit cyclomatic complexity to 10
    "complexity": [
      2,
      10
    ],
    // when using "for in" to iterate object properties, check it object has own property
    "guard-for-in": 2,
    // not allowed are yoda-style expressions
    "yoda": 2,
    // always use ES6 shorthand notation for objects
    "object-shorthand": 2,
    "space-before-blocks": 2,
    "space-before-function-paren": [
      2,
      {
        "anonymous": "always",
        "named": "never"
      }
    ],
    "space-in-parens": [
      2,
      "never"
    ],
    "generator-star-spacing": [
      2,
      "before"
    ],
    "no-mixed-requires": 0,
    "prefer-const": 1,
    "comma-dangle": [
      2,
      "never"
    ],
    "no-trailing-spaces": 0,
    "no-underscore-dangle": 0
  }
}
